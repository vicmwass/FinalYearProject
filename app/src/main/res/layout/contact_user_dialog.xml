    <LinearLayout
        android:id="@+id/contact_call"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/contact_whatsapp">

        <ImageView
            android:id="@+id/whatsapp_call"
            android:layout_width="79dp"
            android:layout_height="44dp"
            android:layout_below="@+id/gmail_img"
            android:layout_margin="5dp"
            android:src="@mipmap/ic_call_foreground" />
        <TextView
            android:id="@+id/user_call"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Call User"
            android:layout_margin="@dimen/edit_text_margin"
